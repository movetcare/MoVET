{
  "compilerOptions": {
    "rootDir": "./src",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true,
    "types": [],
    "lib": ["ES2021.String"]
  },
  "compileOnSave": true,
  "include": ["**/*.ts"],
  "exclude": ["dist", "build", "node_modules"]
}
