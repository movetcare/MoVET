{
  "name": "@movet/movet",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "turbo run dev --parallel",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "update": "pnpm -r update -i -L",
    "clean": "pnpm run clean:modules && pnpm run clean:lock && pnpm install && pnpm run build --force",
    "clean:builds": "find ./ -name .next -type d -exec rm -rf {} + && find ./ -name dist -type d -exec rm -rf {} +",
    "clean:modules": "find ./ -name node_modules -type d -exec rm -rf {} +",
    "clean:lock": "find ./ -name packages-lock.json -type d -exec rm -rf {} + && find ./ -name yarn.lock -type d -exec rm -rf {} +"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:0.0.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "pnpm@7.13.4",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}